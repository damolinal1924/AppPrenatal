<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityPerfil">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    app:srcCompat="@drawable/users"
                    tools:layout_editor_absoluteX="140dp"
                    tools:layout_editor_absoluteY="40dp" />

            <TextView
                    android:id="@+id/lblnomusuario"
                    android:layout_width="301dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-15dp"
                    android:text="Ginna Hernandez"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/textView7"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="-301dp"
                    android:layout_marginBottom="-22dp"
                    android:clickable="true"
                    android:text="Editar perfil" />

        </LinearLayout>

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                app:srcCompat="@drawable/icon_background_blue"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="40dp" />

        <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Notificación"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sobre nosotros"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Preguntas más frecuentes"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cerrar sesión"
                android:textAllCaps="false" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" app:itemTextColor="@android:color/background_light"
            app:itemIconTint="@android:color/background_light" app:itemBackground="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>