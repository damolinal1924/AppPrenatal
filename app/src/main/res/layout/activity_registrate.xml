<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrateActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" android:layout_marginBottom="10dp">
        <TextView
                android:text="Regístrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textColor="@android:color/black"
                android:textSize="24sp" android:textStyle="bold" android:paddingTop="20dp"
                android:paddingBottom="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/editText" android:hint="Nombre"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/editText2" android:hint="Correo eléctronico" android:paddingTop="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:id="@+id/editText3" android:hint="Teléfono" android:paddingTop="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/editText4" android:hint="Contraseña" android:paddingTop="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/editText5" android:hint="Repetir contraseña" android:paddingTop="20dp"
        />
        <Button
                android:text="Continuar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnIniciarSesion" android:textAllCaps="false"
        />
    </LinearLayout>
</RelativeLayout>