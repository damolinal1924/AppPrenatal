<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSemana8">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <TextView
                    android:id="@+id/txtsemana1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:text="8 semana - día 1"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/txtfechasem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="Jueves, 23 marzo, 2019"
                    android:textSize="12sp" />

            <ImageView
                    android:id="@+id/imgtrimsem1"
                    android:layout_width="match_parent"
                    android:layout_height="214dp"
                    android:layout_gravity="top"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:src="@drawable/embarazada_vacunas" />

            <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="El desarrollo de tu bebé"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="En esta semana se empiezan a desarrollar los dedos de tu bebe además el aparato digestivo y respiratorio continúan su desarrollo, los ojos del bebe se empiezan a hacer más grandes y más notorios se forma la retina y el pigmento que nos da el color de los ojos y las protuberancias de los genitales para determinar el sexo del bebe se empiezan a formar." />

        </LinearLayout>
    </ScrollView>

</FrameLayout>