<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="80dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="20dp">

            <Button
                    android:id="@+id/btnEcooTransvaginal"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/degradado"
                    android:drawableRight="@drawable/ic_right_24dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Ecoobtretica transvaginal"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            <Button
                    android:id="@+id/btnEcoTranslucenciaNucal"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/degradado"
                    android:drawableRight="@drawable/ic_right_24dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="EcografÃ­a de translucencia nucal"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            <Button
                    android:id="@+id/btnDoopleArteria"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/degradado"
                    android:drawableRight="@drawable/ic_right_24dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Doppler de arterias uterinas"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>