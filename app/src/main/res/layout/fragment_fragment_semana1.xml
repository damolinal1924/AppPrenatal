<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSemana1">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <TextView
                    android:id="@+id/txtsemana1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:text="1 semana"
                    android:textStyle="bold" />

            <ImageView
                    android:id="@+id/imgtrimsem1"
                    android:layout_width="match_parent"
                    android:layout_height="214dp"
                    android:layout_gravity="top"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:src="@drawable/embarazada_vacunas" />

            <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="El desarrollo de tu bebé"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Esta semana corresponde al periodo menstrual y es la que se usa para calcular la edad gestacional del feto además de calcular la fecha probable de parto." />

        </LinearLayout>
    </ScrollView>

</FrameLayout>