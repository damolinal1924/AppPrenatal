<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSemana10">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <TextView
                    android:id="@+id/txtsemana1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:text="10 semana - día 1"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/txtfechasem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="Jueves, 23 marzo, 2019"
                    android:textSize="12sp" />

            <ImageView
                    android:id="@+id/imgtrimsem1"
                    android:layout_width="match_parent"
                    android:layout_height="214dp"
                    android:layout_gravity="top"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:src="@drawable/embarazada_vacunas" />

            <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="El desarrollo de tu bebé"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Todos los órganos vitales del bebe se han desarrollado y empiezan a trabajar de manera unida para continuar su formación y el desarrollo del bebé." />

        </LinearLayout>
    </ScrollView>

</FrameLayout>